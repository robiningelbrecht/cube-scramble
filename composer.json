{
  "name": "robiningelbrecht/twisty-puzzle-scrambler",
  "description": "Generate, verify and analyse twisty puzzle scrambles",
  "keywords": [
    "PHP",
    "Speedcubing",
    "Twisty puzzles",
    "Rubiks Cube"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Robin Ingelbrecht",
      "email": "ingelbrecht_robin@hotmail.com"
    }
  ],
  "require": {
    "php": "^8.1 || ^8.2"
  },
  "autoload": {
    "psr-4": {
      "RobinIngelbrecht\\TwistyPuzzleScrambler\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.15",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.0",
    "robiningelbrecht/phpunit-pretty-print": "^1.2",
    "spatie/phpunit-snapshot-assertions": "^5.0"
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "lint:fix": " ./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php"
  }
}
